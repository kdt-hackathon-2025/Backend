<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <!-- Appender, Layout 설정 -->
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36}(%M:%L) - %m%n"/>
        </Console>
    </Appenders>

    <!-- Logger 설정 -->
    <Loggers>
        <!-- Root Logger - 기본 경고 레벨로 설정하여 불필요한 로그 제거 -->
        <Root level="WARN" additivity="false">
            <AppenderRef ref="console"/>
        </Root>
        
        <!-- 애플리케이션 로그 - 개발 시 상세 정보 -->
        <Logger name="org.scoula" level="DEBUG" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>

        <!-- Spring Framework - 필요한 정보만 -->
        <Logger name="org.springframework" level="INFO" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        
        <!-- Spring Security (중요한 보안 로그) -->
        <Logger name="org.springframework.security" level="DEBUG" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>

        <!-- JDBC/SQL 로그 - 개발 시 SQL 확인용 -->
        <Logger name="jdbc" level="OFF" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>

        <Logger name="jdbc.sqlonly" level="DEBUG" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>
        
        <Logger name="jdbc.sqltiming" level="DEBUG" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>

        <!-- MyBatis 로그 -->
        <Logger name="org.mybatis" level="DEBUG" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>

        <!-- HikariCP 커넥션 풀 로그 -->
        <Logger name="com.zaxxer.hikari" level="INFO" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>

    </Loggers>

</Configuration>